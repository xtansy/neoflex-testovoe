{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"module": "ESNext",
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": false,
		"noEmit": true,
		"jsx": "react-jsx",
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"@api/requests": [
				"./src/API/requests"
			],
			"@redux/headphones": [
				"./src/redux/headphones/headphones"
			],
			"@redux/cart": [
				"./src/redux/cart/cart"
			],
			"@redux/instance": [
				"./src/redux/instance"
			],
			"@pages": [
				"./src/pages"
			],
			"@utils": [
				"./src/utils"
			],
			"@components": [
				"./src/components"
			],
			"@svg": [
				"./src/svg"
			],
			"@headphones/selectors": [
				"./src/redux/headphones/selectors"
			],
			"@cart/selectors": [
				"./src/redux/cart/selectors"
			],
			"@ui": [
				"./src/ui"
			]
		}
	},
	"include": [
		"src"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}