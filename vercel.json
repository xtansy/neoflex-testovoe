{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build"
        },
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api(.*)",
            "dest": "http://localhost:3001/api$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}